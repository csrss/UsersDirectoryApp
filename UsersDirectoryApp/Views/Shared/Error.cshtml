@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="panel panel-default">
    <div class="panel-heading" style="background-color:steelblue; color:white">
        <h3>
            <svg filter="invert(100%)" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="vertical-align: middle;">
                <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z" />
            </svg>
            An error occurred in action '@Model.ActionName' while processing your request.
        </h3>
    </div>
    <div class="panel-body">
        <p>
            <table>
                <tr>
                    <td style="width:20%">Error message:</td>
                    <td style="width:80%; padding-left:1%">@Model.Exception.Message</td>
                </tr>
            </table>
        </p>
    </div>
    <div class="panel-footer" style="background-color:whitesmoke; text-align:right">
        <a href="/" style="min-width:100px" class="btn btn-primary">Close</a>
    </div>
</div>